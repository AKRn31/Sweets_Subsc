<div class="col-md-10 offset-md-1">
<h2>レビュー投稿</h2>
<% if @post.errors.any? %>
  <%= @post.errors.count %>件のエラーが発生しました
  <ul>
    <% @post.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>



  <%= form_with model: @post do |f| %>
  <p>ユーザーネーム：<%= current_user.username %></p>
   
  <p>サブスク会社名：<%= f.select :subsc_id, options_from_collection_for_select( Subsc.all, :id, :company_name) %></p>
  <div class="form-group col-5">
    <label for="post_title">タイトル</label>
      <%= f.text_field :title , class: "form-control" %> 
  </div>
  <div class="form-group col-5">
    <label for="post_body">詳細</label>
    <%= f.text_area :body , class: "form-control" %> 
  </div>

  <div class="field">
    <%= f.file_field :images, multiple: true %>
  </div>

  <%= f.submit '投稿', class:"btn btn-sm btn-success mt-2 col-1 " %>
  <%= link_to "戻る", posts_path %>
<% end %>

</div>