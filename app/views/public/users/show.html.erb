<div class="col-md-10 offset-md-1">
  <h2>ユーザー画面</h2>
  <table class="table col-md-5 offset-md-1">
    <tr>
      <th scope="row">ユーザーネーム </th>
      <th><%= @user.username %></th>
    </tr>
    <tr>
      <th scope="row">メースアドレス</th>
      <th><% if @user = current_user %>
            <%= @user.email %>
         </th>
    </tr>
  </table>
  <p class="col offset-md-6"><%= link_to "ユーザー情報の編集", edit_user_path(@user), class:'btn btn-secondary ' %></p>
          <% end %>


  <h2>投稿一覧</h2>
    <table class="table">
      <thead>
        <tr>
          <th>サブスク名</th><br>
          <th>タイトル</th>
          <th>詳細</th>
          <th>#投稿画像</th>
        </tr>
      </thead>
      <tbody> 
      <% @posts.each do |post| %>
        <tr>
          <td><%= post.subsc.name %></td>
          <td><%= post.title %></td>
          <td><%= post.body %></td>
          <td>
          <% if post.images.attached? %>
            <% post.images.each do |image| %>
              <%= image_tag image.variant(resize: '150x150') %>
            <% end %>
          <% end %>
          </td>
      <p class="col-2">
      <td><%= link_to "編集", edit_post_path(post) %></td>
      <td><%= link_to "詳細", post_path(post) %></td>
      <td>コメント数: <%= post.comments.count %></td></p>
    <% end %>
  </tbody>

  </div>
  


