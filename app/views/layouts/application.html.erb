<!DOCTYPE html>
<html>
  <head>
    <title>Sweets</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
      <div class="container">
        <div class='navbar-brand '><%= link_to "Sweets Subsc", root_path, class:'text-dark font-italic' %></div>
          <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav mr-auto">
            <% if user_signed_in? %>
              <li class="nav-item ">
                <%= link_to "Subsc", subscs_path, class:'nav-link ' %>
              </li>
            <li class="nav-item">
              <%= link_to "Post", posts_path, class:'nav-link'  %>
            </li>
            <li class="nav-item">
              <%= link_to "User", user_path(current_user.id), class:'nav-link'%>
            </li>
            <li class="nav-item">
              <%= link_to "Log out", destroy_user_session_path, method: :delete , class:'nav-link'%>
            </li>
          <% else %>
            <li class="nav-item">
              <%= link_to "新規登録", new_user_registration_path, class:'nav-link' %>
            </li>
            <li class="nav-item">
              <%= link_to "ログイン", new_user_session_path, class:'nav-link' %>
            </li>
            <li class="nav-item">
              <%= link_to "ゲスト", users_guest_sign_in_path,  method: :post, class:'nav-link'  %>
            </li>
          <% end %>
          </ul>
        </div>
      </div>
    </nav>
    </header>
    <main>
      <%= render 'public/searches/form' %>
      <%= render 'public/searches/search' %>
      <%= flash[:notice]  %>
      <%= yield %>
    </main>
  </body>
</html>
